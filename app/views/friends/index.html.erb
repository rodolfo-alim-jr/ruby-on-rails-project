<% if user_signed_in? %>


<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User ID</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend  %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', friend, class:"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path %>

<% else %>

<h1>Hello World!</h1>

<% end %>
